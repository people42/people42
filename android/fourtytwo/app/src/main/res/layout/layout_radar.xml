<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="121dp"
    android:paddingBottom="150dp"
    tools:context=".MainActivity">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            />
    <ImageView
        android:id="@+id/blue_ring"
        android:layout_width="650dp"
        android:layout_height="650dp"
        android:src="@drawable/radar_animation"
        android:scaleType="center"
        android:visibility="invisible"
        android:layout_gravity="center"/>
    <View
        android:layout_gravity="center"
        android:layout_width="@dimen/circle_shape"
        android:layout_height="@dimen/circle_shape"
        android:background="@drawable/circle_shape"
        />
    <View
        android:layout_gravity="center"
        android:layout_width="@dimen/circle_shape2"
        android:layout_height="@dimen/circle_shape2"
        android:background="@drawable/circle_shape"
        />
    <View
        android:layout_gravity="center"
        android:layout_width="@dimen/circle_shape3"
        android:layout_height="@dimen/circle_shape3"
        android:background="@drawable/circle_shape"
        />
    <View
        android:layout_gravity="center"
        android:layout_width="121dp"
        android:layout_height="121dp"
        android:background="@drawable/radar_circle"
        />
    <View
        android:layout_gravity="center"
        android:layout_width="298dp"
        android:layout_height="298dp"
        android:background="@drawable/radar_circle"
        />
    <View
        android:layout_gravity="center"
        android:layout_width="476dp"
        android:layout_height="476dp"
        android:background="@drawable/radar_circle3"

        />
    <com.skydoves.elasticviews.ElasticImageView
        android:id="@+id/myLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/my_location_button"
        android:layout_gravity="center"
        app:imageView_scale="0.7"
        app:imageView_duration="300" />
</FrameLayout>

